<%= form_with model: @question do |f| %>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <% if @question.errors[:title].any? %>

        <div class = "error"><%= f.label :title%></div>
      <% else %>
        <div><%= f.label :title %></div>
      <% end %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :title, require: true, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: 'Body', class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit question!", class: 'btn btn-primary' %>

<% end %>
