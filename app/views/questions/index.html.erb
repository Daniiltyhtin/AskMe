<h1>Questions</h1>

<p><%= link_to 'Question new', new_question_path %></p>
<% @questions.each do |question| %>

<h2><%= question.title %></h2>

<time datetime = "<%= question.formated_created_at%>">
    <%= question.formated_created_at%>
</time>

<p>
    <%= question.body %>
    <br>

    <%= link_to 'Edit', edit_question_path(question) %>
    <br>
    <%= link_to 'Destroy', question_path(question), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
    <hr>
</p>


<% end %>
