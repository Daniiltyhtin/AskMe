<h1 class="mb-4">Show question</h1>

<article class="card mt-3 mb-3">
  <div class="card-body">

    <h4><%= @question.title %></h2>
  
    <section class="card-text">
      <time datetime="<%= @question.formated_created_at %>">
        <small><%= @question.formated_created_at %></small>
      </time>
      <p class="my-2">
        <%= @question.body %>
      </p>
    </section>

    <%= link_to 'Back', questions_path(@question), class: 'btn btn-warning' %> 
    <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
    <%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
     data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  </div>
</article>


<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer], data:{turbo: false} do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, placeholder: 'Body', class: 'form-control' %>
    </div>
  </div>

  <%= f.submit "Submit answer!", class: 'btn btn-primary mb-3' %>

<% end %>
